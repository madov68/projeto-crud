<% include ../partials/header.ejs%>

<h1>Editar Pessoa</h1>
<p> <a type="button" class="btn btn-info" href="/pessoas">Voltar para a Lista de Pessoas</a> </p>
<form method="post">
  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" value="<%= pessoa.nome %>">
  </div>

  <div class="form-group">
    <label for="nascimento">Nascimento</label>
    <input type="text" class="form-control" id="nascimento" name="nascimento" placeholder="Nascimento (yyyy-mm-dd)" value="<%= pessoa.nascimento %>">
  </div>

  <div class="form-group">
    <label for="cargo">Cargo</label>
    <input type="text" class="form-control" id="cargo" name="cargo" placeholder="Cargo" value="<%= pessoa.cargo %>">
  </div>
  
  
  <button type="submit" class="btn btn-success">Salvar</button>
</form>

<% include ../partials/footer.ejs%>